<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:key="pref_key_1d"
        android:title="Linear (1D) Symbologies" >
        <SwitchPreference
            android:defaultValue="true"
            android:key="sym_codabar_enable"
            android:title="Codabar" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="sym_code11_enable"
            android:title="Code 11" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="sym_code39_enable"
            android:title="Code 39" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="sym_code93_enable"
            android:title="Code 93" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="sym_code128_enable"
            android:title="Code 128" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="sym_ean8_enable"
            android:title="EAN-8/JAN-8" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="sym_ean13_enable"
            android:title="EAN-13/JAN-13" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="sym_int25_enable"
            android:title="Interleaved 2 of 5" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="sym_upca_enable"
            android:title="UPC-A" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="sym_upce0_enable"
            android:title="UPC-E" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="pref_key_2d"
        android:title=" (2D) Symbologies" >
        <SwitchPreference
            android:defaultValue="true"
            android:key="sym_micropdf_enable"
            android:title="Micro PDF417" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="sym_pdf417_enable"
            android:title="PDF417" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="sym_aztec_enable"
            android:title="Aztec Code" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="sym_datamatrix_enable"
            android:title="Data Matrix" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="sym_hanxin_enable"
            android:title="Han Xin" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="sym_maxicode_enable"
            android:title="Maxicode" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="sym_qr_enable"
            android:title="QR Code" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="scanning_setting"
        android:title="@string/scanning_preferences" >
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/decode_centering_mode_entries"
            android:entryValues="@array/decode_centering_mode_values"
            android:key="decode_centering_mode"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:summary="@string/decode_centering_mode_list_summary"
            android:title="@string/decode_centering_mode_list_title" />
        <ListPreference
            android:defaultValue="5"
            android:entries="@array/lightsintensity_config_values_titles"
            android:entryValues="@array/lightsintensity_config_values"
            android:key="lightsintensityConfig"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:summary="@string/title_lightsintensity_config_summary"
            android:title="@string/title_lightsintensity_config" />
    </PreferenceCategory>

</PreferenceScreen>